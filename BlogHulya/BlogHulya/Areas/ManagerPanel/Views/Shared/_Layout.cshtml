<!DOCTYPE html>
    <html lang="en">
    <head>
        <title>@ViewBag.Title - Blog Hulya</title>
        <meta http-equiv="content-type" content="text/html;charset=UTF-8" />

        <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <link href="~/Content/AdminPanel.css" rel="stylesheet" />
        <link href="~/Content/AdminImage.css" rel="stylesheet" />
        <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    </head>
    <body style="background-image: url('../../Image/back2.png');">
        @{
            string Logon = null;

            if (Session["LogonUser"] != null)
            {
                Logon = Session["LogonUser"].ToString();
            }
            BlogHulya.Models.Member logonUser = (BlogHulya.Models.Member)Session["LogonUser"];
        }
        <div id="wrapper">
            <nav class="navbar header-top fixed-top navbar-expand-lg  navbar-dark ">
                <a class="navbar-brand" href="#">LOGO</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    <br />
                    <ul class="navbar-nav side-nav">

                        <li class="nav-item">
                            <div class="user-panel">
                                <div class="pull-left image">
                                    <img src="~/Image/@logonUser.ProfilImageName" class="rounded-circle" alt="User Image">

                                    &nbsp;@logonUser.Name @logonUser.Surname

                                </div>
                                \@logonUser.MemberType<br />
                                @logonUser.Email
                            </div>

                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="~/ManagerPanel/Manager/AddToNote">
                                Not Ekle
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/ManagerPanel/Manager/ConfirmComment">Yorum Düzenle</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/ManagerPanel/Manager/AddToRole">Rol Ata</a>
                        </li>

                        <li class="nav-item fixed-bottom" >
                            <p>
                                Tüm Hakları Saklıdır.&copy; 2017
                            </p>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-md-auto d-md-flex">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.RouteUrl("Index")">
                                AnaSayfa
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">@($"{logonUser.Name} {logonUser.Surname}")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.RouteUrl("Logout")">Çıkış</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>

    </body>
    </html>
